# Enhanced Web Scraper Configuration
# Multiple scraping strategies with automatic fallback

# Scraping Strategy Configuration
DEFAULT_SCRAPING_STRATEGY=web
ENABLE_API_SCRAPERS=false
ENABLE_BROWSER_SCRAPERS=false

# Rate Limiting (more conservative for web scraping)
MAX_CONCURRENT_REQUESTS=5
MIN_REQUEST_DELAY=2.0
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# Reddit API (Optional - only needed if ENABLE_API_SCRAPERS=true)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=WebScraper/1.0 by YourUsername

# Twitter/X API (Optional - only needed if ENABLE_API_SCRAPERS=true)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Browser Automation (Optional - only needed if ENABLE_BROWSER_SCRAPERS=true)
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# Database configuration
DATABASE_URL=sqlite:///./webscraper.db
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_optional
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_optional
